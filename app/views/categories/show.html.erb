<div class="mt-8">
  <dl class="mt-5 grid grid-cols-1 rounded-lg bg-white overflow-hidden shadow divide-y divide-gray-200 md:grid-cols-3 md:divide-y-0 md:divide-x">
    <div class="px-4 py-5 sm:p-6">
      <dt class="text-base font-normal text-gray-900">Spent over time</dt>
      <dd class="mt-1 flex justify-between items-baseline md:block lg:flex">
        <div class="flex items-baseline text-2xl font-semibold text-indigo-600">
          <%= @category.formatted_total_time %>
        </div>
      </dd>
    </div>

    <div class="px-4 py-5 sm:p-6">
      <dt class="text-base font-normal text-gray-900">Last 30 days</dt>
      <dd class="mt-1 flex justify-between items-baseline md:block lg:flex">
        <div class="flex items-baseline text-2xl font-semibold text-indigo-600">
          <%= @total_time_last_30_days %>
        </div>

        <%= render 'shared/difference_indicator', value: @time_difference %>
      </dd>
    </div>

    <div class="px-4 py-5 sm:p-6">
      <dt class="text-base font-normal text-gray-900">Avg. daily (last 30 days)</dt>
      <dd class="mt-1 flex justify-between items-baseline md:block lg:flex">
        <div class="flex items-baseline text-2xl font-semibold text-indigo-600">
          <%= @avg_time_last_30_days %>
        </div>

        <%= render 'shared/difference_indicator', value: @avg_time_difference %>
      </dd>
    </div>
  </dl>
</div>


<div class="bg-white relative px-4 pt-4 pb-2 sm:px-6 lg:px-8 mt-4 rounded-lg drop-shadow">
  <div data-controller="apex-chart" data-apex-chart-periods-by-day-value="<%= @periods_by_day.to_json %>"></div>
</div>

<div class="mt-4 flex flex-col bg-white px-4 pt-4 pb-2 sm:px-6 lg:px-8 rounded-lg drop-shadow">
  <h2 class="text-lg font-bold">Periods</h2>
  <div class="-my-2 -mx-4 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="inline-block min-w-full py-2 align-middle md:px-6 lg:px-8 mt-4">
      <div class="overflow-hidden ring-1 ring-gray-200 md:rounded-lg">
        <table class="min-w-full divide-y divide-gray-300">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Date</th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Time</th>
            </tr>
          </thead>
          <tbody class="bg-white">
            <% @category.periods.last(5).each do |period| %>
              <tr>
                <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6"><%= period.start.strftime('%Y-%m-%d') %></td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= period.formatted_time %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="md:px-6 lg:px-8 mt-2 mb-6">
      <%= link_to 'All periods', periods_path, class: 'inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
    </div>
  </div>
</div>