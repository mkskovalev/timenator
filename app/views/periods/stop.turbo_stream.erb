<%= turbo_stream.replace "categories_list" do %>
  <%= render partial: "categories/categories_list", 
             locals: { categories: @categories, 
                       period: @period, 
                       unfinished_period: @unfinished_period } %>
<% end %>

<%= turbo_stream.replace "today-timeline" do %>
  <%= render partial: "categories/timeline", locals: { categories_for_timeline: @categories_for_timeline } %>
<% end %>

<%= turbo_stream.replace "time-for-today" do %>
  <%= render 'categories/time_for_today', total_time_for_today: @total_time_for_today %>
<% end %>
