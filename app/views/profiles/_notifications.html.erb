<div class="shadow sm:rounded-md sm:overflow-hidden">
  <div class="bg-white py-6 px-4 sm:p-6">
    <div>
      <h2 class="text-lg leading-6 font-medium text-gray-900"><%= t('.notifications') %></h2>
      <p class="mt-1 text-sm text-gray-500"><%= t('.set_notifications_settings') %></p>
    </div>

    <div class="block lg:flex items-center gap-2 bg-sky-50 px-4 py-4 rounded-lg mt-6">
      <% if current_user.telegram_id.blank? %>
        <%= link_to telegram_bot_link(current_user), class: "inline-flex items-center border-2 border-sky-400 pl-3 pr-4 py-2 mr-2 rounded-full gap-2 bg-white text-sm", target: "_blank" do %>
          <%= inline_svg('icons/telegram.svg', class: 'h-6 w-6') %>
          <%= t('.connect_telegram') %>
        <% end %>
        <span class="text-sm text-gray-500 mt-2 lg:mt-0 px-2 lg:mx-0"><%= t('.connect_to_telegram') %></span>
      <% else %>
        <%= inline_svg('icons/telegram.svg', class: 'h-6 w-6') %>
        <span class="text-sm text-gray-500 mt-2 lg:mt-0 px-2 lg:mx-0">
          <%= t('.telegram_connected_html', username: current_user.telegram_username) %>
        </span>
      <% end %>
    </div>
    <div class="mt-6">
      <h2 class="text-md leading-6 font-medium text-gray-900"></h2>
      <div class="mt-6">
        <div class="flex items-center gap-2">
          
        </div>
      </div>
    </div>
    <div class="flex flex-col">
      <div class="-my-2 -mx-4 overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="inline-block min-w-full py-2 align-middle md:px-6 lg:px-8">
          <table class="min-w-full divide-y divide-gray-300">
            <thead>
              <tr>
                <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6 md:pl-0"><%= t(:type) %></th>
                <th scope="col" class="py-3.5 px-3 text-left text-sm font-semibold text-gray-900"><%= t(:email) %></th>
                <% if current_user.telegram_id %>
                  <th scope="col" class="py-3.5 px-3 text-left text-sm font-semibold text-gray-900"><%= t(:telegram_name) %></th>
                <% end %>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              <tr>
                <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6 md:pl-0"><%= t('.weekly_report') %></td>
                <td class="whitespace-nowrap py-4 px-3 text-sm text-gray-500"><%= render 'shared/toggle_button', url: toggle_channel_subscriptions_path(type: 'weekly_report', channel: 'email'), checked: @subscriptions.present? ? @subscriptions[:weekly_report][:email] : false %></td>
                <% if current_user.telegram_id %>
                  <td class="whitespace-nowrap py-4 px-3 text-sm text-gray-500"><%= render 'shared/toggle_button', url: toggle_channel_subscriptions_path(type: 'weekly_report', channel: 'telegram'), checked: @subscriptions.present? ? @subscriptions[:weekly_report][:telegram]: false %></td>
                <% end %>
              </tr>
  
              <!-- More people... -->
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>