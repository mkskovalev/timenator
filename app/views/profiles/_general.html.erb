<%= form_with url: '/profile', method: :patch, data: { turbo_stream: true }, id: 'general_settings' do |f| %>
<div class="shadow sm:rounded-md sm:overflow-hidden">
  <div class="bg-white py-6 px-4 sm:p-6">
    <div>
      <h2 id="payment-details-heading" class="text-lg leading-6 font-medium text-gray-900"><%= t('.general_settings') %></h2>
      <p class="mt-1 text-sm text-gray-500"><%= t('.update_notice') %></p>
    </div>

      <div class="mt-6 col-span-4 sm:col-span-2">
        <%= f.label :timezone, t('.timezone_label'), class: 'block text-sm font-medium text-gray-700' %>
        <%= f.select :timezone, time_zone_options_for_select(current_user.timezone), { include_blank: 'Not selected' }, class: 'mt-1 block w-full bg-white border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-gray-900 focus:border-gray-900 sm:text-sm' %>
        <div class="mt-2 text-xs text-gray-500">
          <%= t('.timezone_notice') %>
        </div>
      </div>

      <div class="mt-6 col-span-4 sm:col-span-2">
        <%= f.label :locale, t('.language_label'), class: 'block text-sm font-medium text-gray-700' %>
        <%= f.select :locale, LOCALES_FOR_SELECT.map { |code, name| [name, code] }, { selected: current_user.locale }, class: 'mt-1 block w-full bg-white border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-gray-900 focus:border-gray-900 sm:text-sm' %>
      </div>
    </div>
    <div class="px-4 py-3 bg-gray-50 text-right sm:px-6">
      <button type="submit" class="bg-gray-800 border border-transparent rounded-md shadow-sm py-2 px-4 inline-flex justify-center text-sm font-medium text-white hover:bg-gray-900 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900"><%= t(:save) %></button>
    </div>
  </div>
</div>
<% end %>