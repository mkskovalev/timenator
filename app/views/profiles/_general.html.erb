<div class="shadow sm:rounded-md sm:overflow-hidden">
  <div class="bg-white py-6 px-4 sm:p-6">
    <div>
      <h2 class="text-lg leading-6 font-medium text-gray-900"><%= t('.general_settings') %></h2>
      <p class="mt-1 text-sm text-gray-500"><%= t('.update_notice') %></p>
    </div>
    <div>
      <div class="mt-6 col-span-4 sm:col-span-2">
        <%= form.label :timezone, t('.timezone_label'), class: 'block text-sm font-medium text-gray-700' %>
        <%= form.select :timezone, time_zone_options_for_select(current_user.timezone), { include_blank: 'Not selected' }, class: 'mt-1 block w-full bg-white border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-gray-900 focus:border-gray-900 sm:text-sm' %>
        <div class="mt-2 text-xs text-gray-500">
          <%= t('.timezone_notice') %>
        </div>
      </div>

      <div class="mt-6 col-span-4 sm:col-span-2 mb-2">
        <%= form.label :locale, t('.language_label'), class: 'block text-sm font-medium text-gray-700' %>
        <%= form.select :locale, LOCALES_FOR_SELECT.map { |code, name| [name, code] }, { selected: current_user.locale }, class: 'mt-1 block w-full bg-white border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-gray-900 focus:border-gray-900 sm:text-sm' %>
      </div>
    </div>
  </div>
</div>