<div id="modal_content">
  <div>
    <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-green-100">
      <svg class="h-6 w-6 text-green-600" x-description="Heroicon name: outline/check" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
      </svg>
    </div>
    <div class="mt-3 text-center sm:mt-5">
      <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-title"><%= t('.created', category: category.name) %></h3>
      <div class="mt-2">
        <p class="text-sm text-gray-500"><%= t('.report_url_text_html') %></p>
      </div>
    </div>
  </div>
  <div data-controller="clipboard" data-clipboard-success-content-value="<%= t(:copied) %>" class="mt-8">
    <label for="link" class="block text-sm font-medium text-gray-700">Ссылка</label>
    <div class="mt-1 flex rounded-md shadow-sm">
      <div class="relative flex items-stretch flex-grow focus-within:z-10">
        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
          <%= inline_svg('icons/link.svg', class: 'h-5 w-5 text-gray-400') %>
        </div>
        <%= text_field_tag :link, report_url(report), class: 'focus:ring-indigo-500 focus:border-indigo-500 block w-full rounded-none rounded-l-md pl-10 sm:text-sm border-gray-300', disabled: true, data: { clipboard_target: "source" } %>
      </div>
      <button data-action="clipboard#copy" data-clipboard-target="button" type="button" class="-ml-px relative inline-flex items-center space-x-2 px-4 py-2 border border-gray-300 text-sm font-medium rounded-r-md text-gray-700 bg-gray-50 hover:bg-gray-100 focus:outline-none focus:ring-1 focus:ring-indigo-500 focus:border-indigo-500">
        <%= inline_svg('icons/clipboard.svg', class: 'h-5 w-5 text-gray-400') %>
        <span>Копировать</span>
      </button>
    </div>
  </div>
  <div data-controller="clipboard" data-clipboard-success-content-value="<%= t(:copied) %>" class="mt-4">
    <label for="pass" class="block text-sm font-medium text-gray-700">Пароль</label>
    <div class="mt-1 flex rounded-md shadow-sm">
      <div class="relative flex items-stretch flex-grow focus-within:z-10">
        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
          <%= inline_svg('icons/key.svg', class: 'h-5 w-5 text-gray-400') %>
        </div>
        <%= text_field_tag :pass, report.password, class: 'focus:ring-indigo-500 focus:border-indigo-500 block w-full rounded-none rounded-l-md pl-10 sm:text-sm border-gray-300', disabled: true, data: { clipboard_target: "source" } %>
      </div>
      <button data-action="clipboard#copy" data-clipboard-target="button" type="button" class="-ml-px relative inline-flex items-center space-x-2 px-4 py-2 border border-gray-300 text-sm font-medium rounded-r-md text-gray-700 bg-gray-50 hover:bg-gray-100 focus:outline-none focus:ring-1 focus:ring-indigo-500 focus:border-indigo-500">
        <%= inline_svg('icons/clipboard.svg', class: 'h-5 w-5 text-gray-400') %>
        <span>Копировать</span>
      </button>
    </div>
  </div>
  <div class="mt-12 mb-4 flex flex-wrap sm:flex-nowrap items-center justify-center">
    <button data-action="click->modal#hide" type="button" class="mt-3 w-24 inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:mt-0 sm:col-start-1 sm:text-sm"><%= t(:close) %></button>
  </div>
</div>